@media screen and (min-width:768px)
	body
		section
			article
				margin 1em 1em
				width 40%

	header
		#main_nav
			padding 0
			#menu_buttom
				display none
			ul.menu_items 
				display block
				margin-top 0
				li
					display inline-block
					margin-bottom 1em
					margin-top 1em

@media screen and (min-width:1280px)
	body
		section
			article
				margin 0.5em 0.5em
				width 30%
	header
		#titulo
			width 450px 
